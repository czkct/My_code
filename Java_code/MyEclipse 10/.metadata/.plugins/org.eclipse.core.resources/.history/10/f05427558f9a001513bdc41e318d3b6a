import java.awt.*;
public class Blood {
	int x, y, w, h;
	TankClient tc;
	int step = 0;
	private int[][] pos= {
			{350,300},{370,300},{375,275},{400,200},{360,270},{365,290},{350,280}
	};
	
	public Blood() {
		x = pos[0][0];
		y = pos[0][1];
	}
	
	public void draw(Graphics g){
		Color c = g.getColor();
		g.setColor(Color.magenta);
		g.fillRect(x, y, w, h);
		g.setColor(c);
		
		move();
	}
	private void move() {
		step++;
		if(step == pos.length){
			step = 0;
		}
		x = pos[step][0];
		y = pos[step][1];
	}
}
